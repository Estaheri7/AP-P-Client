<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.appclient.Controllers.AddPostController">
   <content>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" spacing="20.0">
         <children>
            <Label text="Add a new post">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="titleTextField" maxWidth="-Infinity" prefHeight="26.0" prefWidth="360.0" promptText="Title" />
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
               <content>
                  <TextArea fx:id="contentTextArea" focusTraversable="false" prefHeight="344.0" prefWidth="342.0" promptText="write your content...">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </TextArea>
               </content>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </ScrollPane>
            <Label fx:id="mediaAddedSuccessfully" text="Media added successfully" textFill="#189441" visible="false" />
            <HBox alignment="CENTER" prefHeight="74.0" prefWidth="400.0" spacing="150.0">
               <children>
                  <Button fx:id="doneButton" mnemonicParsing="false" onAction="#onDoneButton" prefHeight="26.0" prefWidth="97.0" text="Done" />
                  <Button fx:id="addMedia" mnemonicParsing="false" onAction="#onAddMediaButton" prefHeight="26.0" prefWidth="94.0" text="Add media">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</DialogPane>
